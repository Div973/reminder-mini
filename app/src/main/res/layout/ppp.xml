<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <FrameLayout
        android:id="@+id/pppFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>



    <LinearLayout android:id="@+id/keyButtonsLayout" style="@style/LinearLayout_PPP">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/patternBTN"
            style="@style/PatternButton_PPP" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/pinBTN"
            style="@style/PinButton_PPP"  />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/passwordBTN"
            style="@style/PasswordButton_PPP" />


    </LinearLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>